// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  name         String?
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  workspaces     Workspace[]
  auditLogs      AuditLog[]
  eventNotes     EventNote[]
  resolvedAlerts Alert[]     @relation("AlertResolvedBy")
  assignedAlerts Alert[]     @relation("AlertAssignedTo")
  documents      Document[]
}

model Workspace {
  id         String    @id @default(cuid())
  name       String
  userId     String
  qboStatus  String    @default("connected")
  lastSyncAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  categories   Category[]
  transactions Transaction[]
  matches      Match[]
  rules        Rule[]
  anomalies    Anomaly[]
  auditLogs              AuditLog[]
  events                 Event[]
  propertyDefinitions    EventPropertyDefinition[]
  alerts                 Alert[]
  vendors                Vendor[]
  documents              Document[]
  esmeMessages           EsmeMessage[]
}

model Category {
  id          String     @id @default(cuid())
  workspaceId String
  name        String
  type        String     // expense, income, asset, liability
  parentId    String?
  createdAt   DateTime   @default(now())

  workspace    Workspace     @relation(fields: [workspaceId], references: [id])
  parent       Category?     @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     Category[]    @relation("CategoryHierarchy")
  transactions Transaction[]
  rules        Rule[]
}

model Transaction {
  id          String    @id @default(cuid())
  workspaceId String
  source      String    // bank, qbo
  externalId  String?
  date        DateTime
  description String
  amount      Decimal
  categoryId  String?
  vendorId    String?
  status      String    @default("unmatched") // unmatched, matched, pending
  confidence  Float?
  aiReasoning String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  workspace        Workspace @relation(fields: [workspaceId], references: [id])
  category         Category? @relation(fields: [categoryId], references: [id])
  vendor           Vendor?   @relation(fields: [vendorId], references: [id])
  bankMatches      Match[]   @relation("BankTransaction")
  qboMatches       Match[]   @relation("QboTransaction")
  anomalies        Anomaly[]
}

model Match {
  id                 String   @id @default(cuid())
  workspaceId        String
  bankTransactionId  String
  qboTransactionId   String
  matchType          String   // exact, suggested, partial, manual
  confidence         Float
  reasoning          String?
  createdAt          DateTime @default(now())

  workspace          Workspace   @relation(fields: [workspaceId], references: [id])
  bankTransaction    Transaction @relation("BankTransaction", fields: [bankTransactionId], references: [id])
  qboTransaction     Transaction @relation("QboTransaction", fields: [qboTransactionId], references: [id])

  @@unique([bankTransactionId, qboTransactionId])
}

model Rule {
  id              String   @id @default(cuid())
  workspaceId     String
  ruleText        String
  parsedCondition String   // JSON stored as string (SQLite doesn't have native JSON type)
  categoryId      String
  isActive        Boolean  @default(true)
  matchCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  workspace       Workspace @relation(fields: [workspaceId], references: [id])
  category        Category  @relation(fields: [categoryId], references: [id])
}

model Anomaly {
  id                 String    @id @default(cuid())
  workspaceId        String
  transactionId      String
  type               String    // timing, duplicate, amount, vendor, unusual
  severity           String    // high, medium, low
  description        String
  suggestedResolution String?
  status             String    @default("open") // open, resolved, dismissed
  resolvedAt         DateTime?
  createdAt          DateTime  @default(now())

  workspace          Workspace   @relation(fields: [workspaceId], references: [id])
  transaction        Transaction @relation(fields: [transactionId], references: [id])
}

model AuditLog {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  action      String
  entityType  String
  entityId    String
  oldValue    String?   // JSON stored as string (SQLite doesn't have native JSON type)
  newValue    String?   // JSON stored as string (SQLite doesn't have native JSON type)
  createdAt   DateTime  @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model Event {
  id          String   @id @default(cuid())
  workspaceId String
  entityType  String   // transaction, match, anomaly, rule, sync, ai_action
  entityId    String
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace       @relation(fields: [workspaceId], references: [id])
  properties  EventProperty[]
  notes       EventNote[]
}

model EventPropertyDefinition {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  type        String   // text, number, boolean, date, select
  options     String?  // JSON array string for select type
  position    Int
  createdAt   DateTime @default(now())

  workspace   Workspace       @relation(fields: [workspaceId], references: [id])
  properties  EventProperty[]
}

model EventProperty {
  id           String   @id @default(cuid())
  eventId      String
  definitionId String
  value        String   // stored as JSON string to support all types
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  event        Event                   @relation(fields: [eventId], references: [id])
  definition   EventPropertyDefinition @relation(fields: [definitionId], references: [id])
}

model EventNote {
  id         String   @id @default(cuid())
  eventId    String
  authorId   String?  // nullable â€” null means AI-authored
  authorType String   // 'user' or 'ai'
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  event      Event    @relation(fields: [eventId], references: [id])
  author     User?    @relation(fields: [authorId], references: [id])
}

model Alert {
  id              String    @id @default(cuid())
  workspaceId     String
  type            String    // 'anomaly' | 'ai_question' | 'system' | 'insight'
  priority        String    // 'requires_action' | 'fyi'
  status          String    @default("active") // 'active' | 'snoozed' | 'resolved'
  title           String
  body            String
  entityType      String?   // nullable
  entityId        String?   // nullable
  responseType    String?   // nullable, 'confirm' | 'select' | 'text' | 'none'
  responseOptions String?   // nullable, JSON string for select options
  responseValue   String?   // nullable
  resolvedAt      DateTime? // nullable
  resolvedById    String?   // nullable
  snoozedUntil    DateTime? // nullable
  assignedToId    String?   // nullable
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  workspace  Workspace @relation(fields: [workspaceId], references: [id])
  resolvedBy User?     @relation("AlertResolvedBy", fields: [resolvedById], references: [id])
  assignedTo User?     @relation("AlertAssignedTo", fields: [assignedToId], references: [id])
}

model Vendor {
  id               String   @id @default(cuid())
  workspaceId      String
  name             String
  normalizedName   String
  totalSpend       Decimal  @default(0)
  transactionCount Int      @default(0)
  firstSeen        DateTime
  lastSeen         DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  workspace    Workspace     @relation(fields: [workspaceId], references: [id])
  transactions Transaction[]

  @@unique([workspaceId, normalizedName])
}

model Document {
  id            String    @id @default(cuid())
  workspaceId   String
  fileName      String
  fileType      String    // 'pdf', 'csv', 'image', etc.
  fileSize      Int       // bytes
  storagePath   String
  folder        String?
  parsedContent String?
  status        String    @default("uploaded") // 'uploaded', 'parsing', 'parsed', 'error'
  uploadedById  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  workspace  Workspace @relation(fields: [workspaceId], references: [id])
  uploadedBy User      @relation(fields: [uploadedById], references: [id])
}

model EsmeMessage {
  id          String   @id @default(cuid())
  workspaceId String
  role        String   // 'esme' or 'user'
  content     String
  metadata    String?  // nullable JSON string for structured data like action cards, alert references
  createdAt   DateTime @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
}
